{
  "name": "@collectionscms/text-editor",
  "description": "A rich text editor with full support for saving to collections.",
  "version": "1.0.0-alpha.1",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "private": true,
  "scripts": {
    "typecheck": "tsc -p . --noEmit",
    "copyfiles": "cpy './README.md' './package.json' dist/",
