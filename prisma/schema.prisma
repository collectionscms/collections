// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Superfast_User {
  id               Int            @id @default(autoincrement())
  firstName        String
  lastName         String
  userName         String?
  email            String         @unique
  password         String
  isActive         Boolean        @default(false)
  token            String?
  superfast_Role   Superfast_Role @relation(fields: [superfast_RoleId], references: [id])
  superfast_RoleId Int
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @default(now())
}

model Superfast_Role {
  id                   Int                    @id @default(autoincrement())
  name                 String                 @unique
  description          String?
  adminAccess          Boolean                @default(false)
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @default(now())
  Superfast_User       Superfast_User[]
  Superfast_Permission Superfast_Permission[]
}

model Superfast_Permission {
  id               Int            @id @default(autoincrement())
  collection       String
  action           String
  superfast_Role   Superfast_Role @relation(fields: [superfast_RoleId], references: [id])
  superfast_RoleId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Superfast_Collection {
  id         Int     @id @default(autoincrement())
  collection String  @unique
  singleton  Boolean @default(false)
  hidden     Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Superfast_Field {
  id         Int     @id @default(autoincrement())
  collection String
  field      String
  label      String
  special    String?
  interface  String?
  readonly   Boolean
  required   Boolean
  hidden     Boolean
  sort       Int?

  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @default(now())
  Superfast_FieldOption Superfast_FieldOption[]

  @@unique([id, collection])
}

model Superfast_FieldOption {
  id    Int    @id @default(autoincrement())
  key   String
  value String

  superfast_Field   Superfast_Field @relation(fields: [superfast_FieldId], references: [id])
  superfast_FieldId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Superfast_Relation {
  id                      Int     @id @default(autoincrement())
  many_collection         String
  many_field              String
  one_collection          String?
  one_field               String?
  one_collection_field    String?
  one_allowed_collections String?
  junction_field          String?
  sort_field              String?
  one_deselect_action     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
