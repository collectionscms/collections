// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SuperfastUser {
  id               Int            @id @default(autoincrement())
  firstName        String
  lastName         String
  userName         String?
  email            String         @unique
  password         String
  isActive         Boolean        @default(false)
  token            String?
  superfastRole   SuperfastRole @relation(fields: [superfastRoleId], references: [id])
  superfastRoleId Int
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @default(now())

  @@map("Superfast_User")
}

model SuperfastRole {
  id                   Int                    @id @default(autoincrement())
  name                 String                 @unique
  description          String?
  adminAccess          Boolean                @default(false)
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @default(now())
  superfastUsers       SuperfastUser[]
  superfastPermissions SuperfastPermission[]

  @@map("Superfast_Role")
}

model SuperfastPermission {
  id               Int            @id @default(autoincrement())
  collection       String
  action           String
  superfastRole   SuperfastRole @relation(fields: [superfastRoleId], references: [id])
  superfastRoleId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("Superfast_Permission")
}

model SuperfastCollection {
  id         Int     @id @default(autoincrement())
  collection String  @unique
  singleton  Boolean @default(false)
  hidden     Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("Superfast_Collection")
}

model SuperfastField {
  id         Int     @id @default(autoincrement())
  collection String
  field      String
  label      String
  special    String?
  interface  String?
  readonly   Boolean
  required   Boolean
  hidden     Boolean
  sort       Int?

  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @default(now())
  superfastFieldOptions SuperfastFieldOption[]

  @@map("Superfast_Field")
  @@unique([id, collection])
}

model SuperfastFieldOption {
  id    Int    @id @default(autoincrement())
  key   String
  value String

  superfastField   SuperfastField @relation(fields: [superfastFieldId], references: [id])
  superfastFieldId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("Superfast_Field_Option")
}

model SuperfastRelation {
  id                      Int     @id @default(autoincrement())
  many_collection         String
  many_field              String
  one_collection          String?
  one_field               String?
  one_collection_field    String?
  one_allowed_collections String?
  junction_field          String?
  sort_field              String?
  one_deselect_action     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("Superfast_Relation")
}
